@{
    ViewData["Title"] = "Lead Re-Assign";
}

@model NexGen.Repository.Leads.EntityLeads



<div class="container-fluid mt-4 p-0 verifier-content" id="divAdd" runat="server">
    <div class="m-0 mx-5 mt-4 bg-white verifier-sec ">
        <div class="row p-0">
            <div class="col-12 card-info">
