                    <div class="row m-4 justify-content-between" style="border-bottom: none;">
                        <div class="col-md-4">
                            <div class="form-group mb-4">
                                <label for="">Company Name</label>
                                <input type="text" class="form-control"  disabled required asp-for="Company_Name" id="txtcompanyname">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-4">
                                <label for="">Enquiry Number</label>
                                <input type="text" class="form-control" required asp-for="EnquiryNumber" id="txtenquirynumber" disabled>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-4">
                                <label for="">Company Details</label>
                                <textarea rows="4" class="form-control" required disabled asp-for="Company_Details" id="txtcompanydetails"></textarea>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-4">
                                <label for="">City</label>
                                <input type="text" class="form-control" disabled asp-for="City" id="txtcity">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-4">
                                <label for="">Country</label>
                                <input type="text" class="form-control" disabled asp-for="Country" id="txtcountry">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-4">
                                <label for="">Sector/Industry</label>
                                <select data-control="select2" ID="ddlIndustrySector" disabled required asp-for="Sector" Class="form-control">
                                    <option value="" disabled selected hidden>--Please Select--</option>
                                    <option>Health Care</option>
                                    <option>Importer</option>
                                    <option>Exporter</option>
                                    <option>Contractor</option>
                                    <option>Trader</option>
