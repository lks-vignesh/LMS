                                <input type="text" class="form-control" asp-for="ContactPerson" disabled required id="txtcontactperson">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-4">
                                <label for="">Designation</label>
                                <input type="text" class="form-control" asp-for="Designation" disabled required id="txtdesignation">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-4">
                                <label for="">Mobile Number</label>
                                <input type="text" class="form-control" asp-for="MobileNumber" disabled required id="txtmobilenumber">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-4">
                                <label for="">E-Mail Id</label>
                                <input type="text" class="form-control" asp-for="EmailID" disabled required id="txtEmailId">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-4">
                            </div>
                        </div>
                    </div>
                    <div class="row m-5 justify-content-between">
                        <h5 id="H1" runat="server">Lead Source Information</h5>
                    </div>
                    <div class="row m-5 justify-content-between" style="border-bottom: none;">
                        <div class="col-md-4">
                            <div class="form-group mb-4">
                                <label for="">Lead Source</label>
                                <select data-control="select2" disabled asp-for="LeadSource" required ID="ddlLeadSource" Class="form-control">
                                    <option value="" disabled selected hidden>--Please Select--</option>
                                    <option>LinkedIn</option>
                                    <option>Website</option>
                                    <option>Facebook Ads</option>
                                    <option>Google Ads</option>
                                    <option>Website Chat</option>
                                    <option>Website Form</option>
                                    <option>Validation Lead</option>
                                    <option>Calendly</option>
                                    <option>Scrapping Lead</option>
                                    <option>Email Marketing Lead</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-4">
                                <label for="">Instrument Value</label>
                                <input type="text" class="form-control" disabled asp-for="InstrumentValue" required id="txtinsrumentvalue" runat="server">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-4">
                                <label for="">Assigned To</label>
                                <input type="text" class="form-control" pattern="^\S(.*\S)?$" placeholder="Xxxx@euroeximbank-sales.com" asp-for="AssignedTo_MailID" id="txtSalesTeam" required>
                                @* <select data-control="select2" ID="ddlSalesAgentName" asp-for="AssignedTo" runat="server" required Class="form-control" AutoPostBack="true">
                                <option value="" disabled selected hidden>--Please Select--</option>
                                <option>Selva</option>
                                </select> *@
                            </div>
                        </div>
                        <div style="padding-top:20px;" class="col-md-12">
                            <!--begin::Label-->
                            <!--end::Label-->
                            <!--end::Label-->
                            <!--begin::Input-->
                            <button asp-action="LeadReAssign" formnovalidate class="btnback">Back</button>
                            <button class="btnsave">Update</button>
                            <!--end::Input-->
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function validateForm() {
        var textboxes = document.querySelectorAll('input[type="text"]');
        var isValid = true;

        textboxes.forEach(function (textbox) {
            // Trim the value of the textbox
            var trimmedValue = textbox.value.trim();

            // Check if the trimmed value is empty
            if (trimmedValue === '') {
                isValid = false;
                return;
            }
        });

        if (!isValid) {
            alert('Textboxes cannot be empty or contain only spaces!');
            return false; // Prevent form submission
        }

        return true; // Allow form submission
    }
</script>
